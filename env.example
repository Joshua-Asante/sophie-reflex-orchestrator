# SOPHIE Reflex Orchestrator Environment Configuration
# ===================================================

# API Key for OpenRouter (single backend)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Database Configuration
CHROMA_HOST=chromadb
REDIS_HOST=redis
REDIS_PORT=6379

# Logging Configuration
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Service Ports
ORCHESTRATOR_PORT=8000
HITL_PORT=8001
CHROMA_PORT=8004
REDIS_PORT=6379

# Development Settings
DEBUG=false
ENVIRONMENT=production

# Memory and Storage
MEMORY_PATH=/app/memory
LOGS_PATH=/app/logs
CONFIGS_PATH=/app/configs

# Security
SECURE_COOKIES=true
SESSION_SECRET=your_session_secret_here

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9323

# Network Configuration
DOCKER_NETWORK=sophie-network
SUBNET_BASE=172.80.0.0/16
